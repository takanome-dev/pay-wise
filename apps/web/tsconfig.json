{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~/env": ["./env.mjs"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": ["src", "**/*.ts", "tailwind.config.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next", ".turbo"]
}
